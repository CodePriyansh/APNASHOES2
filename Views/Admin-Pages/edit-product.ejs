    <body>

        <h2 style="text-align: center;">Edit Product</h2>
      <div class="container-fluid" style="display: flex; justify-content: flex-start; height: 80vh; ">
        <%- include('../partial/admin-sidebar.ejs')%>
        <% for(product of ProductId) {%>
        <form  style="margin-left: 100px; border: 2px double #d18787; padding: 20px; box-shadow: 0px 0px 10px 0px #e60000; width: 500px; height: 400;" action="/product/edit-product/<%=product.id%>" method="POST">
        
          <div class="form-group">
            
              <label>Product Name</label>
              <input value="<%=product.name%>" type="text" name="name" class="form-control"/>
          </div>
          <div class="form-group">
            <label>Price</label>
            <input value="<%=product.price%>" type="text" name="price" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Quantity</label>
            <input value="<%=product.quantity%>" type="number" name="quantity" class="form-control"/>
        </div>
        
        <div class="form-group">
            <label>Description</label>
            <textarea name="description"  class="form-control"><%=product.description%></textarea>
        </div>
        <%}%>
        
        <div class="group">
            <button class="btn btn-primary" type="submit" style="background-color: #E60000;">Edit Product</button>
        </div>
       
        </form>
      </div>
    </body>

